<%- include("./includes/head") %>

    <section class="mx-auto">
      <a href="/">Go back home</a>
      <h1 class="title">Add a new post here!</h1>
    <% if(message.length) {%>
      <p class="error"><%= message %></p>
      <% }%>
      <form action="/admin" method="post" novalidate>
         <input hidden value="<%= csrfToken %>" name="_csrf"/>
        <div>
          <label for="title">Enter title</label>
          <input type="text" id="title" name="title" value="<%= oldFromData.title %>"/>
        </div>
        <div>
          <label for="photo">Enter photo</label>
          <input type="text" id="photo" name="photo" value="<%= oldFromData.photo %>"/>
        </div>
        <div>
          <label for="description">Enter description</label>
          <textarea
            name="description"
            id="description"
            cols="30"
            rows="10"
           
          ><%= oldFromData.description %></textarea>
        </div>
        <button>Add Post</button>
      </form>
    </section>
  </body>
  <%- include("./includes/foot") %>