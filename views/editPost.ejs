<%- include("./includes/head") %>

    <section class="mx-auto">
      <a href="/">Go back home</a>
      <h1 class="title">Add a new post here!</h1>
          <% if(message.length) {%>
      <p class="error"><%= message %></p>
      <% }%>
      <form action="/admin/edit-post" method="post" novalidate>
         <input hidden value="<%= csrfToken %>" name="_csrf"/>
       <input type="text" 
          value="<%=isValidationFail?postId: post._id %>" name="postId" hidden/>
        <div>
          <label for="title">Enter title</label>
          <input type="text" id="title" 
          value="<%=isValidationFail?oldFromData.title: post.title %>" name="title" required />
        </div>
        <div>
          <label for="photo">Enter photo</label>
          <input type="text" id="photo" name="photo" required 
          value="<%=isValidationFail?oldFromData.photo: post.imageUrl %>" 
          />
        </div>
        <div>
          <label for="description">Enter description</label>
          <textarea
            name="description"
            id="description"
            cols="30"
            rows="10"
          ><%=isValidationFail?oldFromData.description: post.description %>

          </textarea>
        </div>
        <button>Edit Post</button>
      </form>
    </section>
  <%- include("./includes/foot") %>