<%- include("../includes/head") %>

    <section class="mx-auto">
      <a href="/">Go back home</a>
      <h1 class="title">Register a new Account here!</h1>
     <% if(message.length) {%>
      <p class="error"><%= message %></p>
      <% }%>
      <form action="/register" method="post">
         <input hidden value="<%= csrfToken %>" name="_csrf"/>
        <div>
          <label for="email">Enter Email</label>
          <input type="text" id="email" name="email" value="<%= oldFromData.email %>" />
        </div>
        <div>
          <label for="password">Enter password</label>
          <input type="text" id="password" name="password" value="<%= oldFromData.password %>"/>
        </div>
        <button>Register Account</button>
      </form>
    </section>
  </body>
  <%- include("../includes/foot") %>